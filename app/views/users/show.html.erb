

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%= render 'books/list', {user:@user,book:@book} %>
    </div>
     <div class="col-md-8 offset-md-1">
         <h2>Books</h2>
         <table class="table table-hover table-inverse">
           <thead>
             <tr>
               <th></th>
               <th>Title</th>
               <th>Opinion</th>
               <th colspan="3"></th>
             </tr>
           </thead>
           <tbody>
             <% @show_book.each do |books| %>
             <tr>
               <td>
                 <%= link_to user_path(@user.id),target: "_self" do %>
                 <%= image_tag @user.get_profile_image(100,100) %>
                 <% end %>
               </td>
               <td>
                 <%= link_to books.title, book_path(books.id) %>
               </td>
               <td>
                 <%= books.body %>
               </td>
             </tr>
             <% end %>
           </tbody>
         </table>
       </div>
     </div>
  </div>