<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%= render 'list', {user:@user,book:@book} %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
        <table class="table">
          <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@user.id),target: "_self" do %>
                  <%= image_tag @show_book.user.get_profile_image(100,100) %><br>
                  <%= @user.name %>
                  <% end %>  
                  
                </td>
                <td>
                    <%= link_to @show_book.title, book_path(@show_book.id)  %>
                     
                </td>
                <td>
                    <%= @show_book.body %>
                </td>
                <td>
                    <%= link_to "Edit", edit_book_path(@show_book.id), class:"btn btn-sm btn-success" %>
                </td>
                <td>
                  <% if @show_book.user == current_user %>
                    <%= link_to "Destroy",book_path(@show_book.id), class:"btn btn-sm btn-danger",method: :delete, data: {confirm: "本当に消しますか？"} %>
                  <% end %>  
                </td>
              </tr>
           </tbody>
        </table>
    </div>
  </div>
</div>     