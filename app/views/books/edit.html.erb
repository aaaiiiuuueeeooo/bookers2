
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<div class="container">
    <div class="row">
        <div ="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h1>Editing Book</h1>
            <%= form_with model: @book,method: :patch do |f| %>
            
            <% if @book.errors.any? %>
              <%= @book.errors.count %>error prohibited this obj from being saved:

              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            <% end %>

            
            <h5>Title</h5>
            <%= f.text_field :title %>
            
            <h5>Opinion</h5>
            <%= f.text_area :body %>
            
            <%= f.submit 'Update Book' %>
            <% end %>
            <td>
                <%= link_to "Show",book_path(@book.id) %>
            </td>
            <td>
                <%= link_to "Back",books_path %>
            </td>
        </div>
    </div>
</div>

